{% extends 'base.html.twig' %}

{% block body %}

    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <body class="hm-gradient">

    <main>
        <div class="container mt-1">
            <div class="example-wrapper">
                <h4 class="text-dark">Please Select Date</h4>
                <div class="row">
                    <div>
                        {{ form_start(form) }}
                            {{ form_widget(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </main>

    {% block javascripts %}
        {{ parent() }}
        <script>
            $(document).ready(function () {
                $('.input-datepicker').datepicker({
                    clearBtn: true,
                    todayHighlight: true,
                    toggleActive: true,
                    autoclose: true,
                    format:'dd/mm/yyyy'
                });
            });
        </script>
    {% endblock %}

    </body>
{% endblock %}