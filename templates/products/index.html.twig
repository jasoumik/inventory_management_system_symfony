{% extends 'base.html.twig' %}

{% block body %}

<body class="hm-gradient">

<main>

    <!--MDB Tables-->
    <div class="container mt-4">

        <div class="card">
            <div class="card-body">
                <!-- Grid row -->
                <div class="row">
                    <!-- Grid column -->
                    <div class="col-md-12">
                        <h2 class="py-3 text-center font-bold font-up blue-text">Products Table</h2>
                    </div>
                    <!-- Grid column -->
                    <div>
                        <form class="form-inline">
                            <div class="form-group mx-sm-3 mb-2">
                                <input type="datetime-local" class="form-control"  placeholder="Select Date">
                            </div>
                            <button type="submit" class="btn btn-primary mb-2">Submit</button>
                        </form>
                    </div>
                </div>
                <!-- Grid row -->
                <!--Table-->
                <table class="table table-hover table-responsive mb-0">
                    <!--Table head-->
                    <thead>
                    <tr>
                        <th scope="row">#</th>
                        <th class="th-lg"><a>Product Name</a></th>
                        <th class="th-lg"><a href="">Product Type</a></th>
                        <th class="th-lg"><a href="">Quantity</a></th>
                        <th class="th-lg"><a href="">Date</a></th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                    <tr>
                        <th scope="row"></th>
                        <td>{{ product.name }}</td>
                        <td>{{ product.type }}</td>
                        <td>{{ product.quantity }}</td>
                        <td>{{ product.date|date('d-m-Y') }}</td>
                    </tr>
                    {% endfor %}

                    </tbody>
                    <!--Table body-->
                </table>
            </div>
        </div>

    </div>
    <!--MDB Tables-->

</main>

</body>

{% endblock %}