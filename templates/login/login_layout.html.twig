<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}login{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {#{{ encore_entry_link_tags('app') }}#}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
    {% endblock %}

    {% block javascripts %}

        {#{{ encore_entry_script_tags('app') }}#}
        <script src="{{ asset('js/jquery-3.2.1.slim.min.js') }}"></script>
        <script src="{{ asset('js/popper.min.js') }}" ></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>

    {% endblock %}
</head>

<body>

<div class="container">
    {% block body %}

        <div class="bg-info mt-3">
            <h3 class="p-3 text-light text-center">Inventory Management System </h3>
        </div>

        <div style="width: 50%; margin-left:25%;margin-top:8%;background:lightgray;padding:25px;">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h3 class=" mb-2 font-weight-normal ">Please sign in Rubel</h3>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <button class="btn btn-md btn-primary mt-3" type="submit">
                    Sign in
                </button>
                <span class="float-right mt-3"><p style="margin-bottom: 0px;">if are you new ? please</p> <a href="{{path('register')}}" style="color:green;">Registration Now</a></span>

            </form>
        </div>

    {% endblock %}
</div>
</body>
</html>
