{% extends 'base.html.twig' %}

{% block title %}ProductType index{% endblock %}

{% block body %}
  <div class="my-5">
    <a href="{{path('app_logout')}}" class="btn btn-danger">Log Out</a>
    <span style="float:right;"> <p class="text-primary">Wellcome! <b>{{app.user.email }}<b></p></span>
  </div>

    <h1>ProductType</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product_type in product_types %}
            <tr>
                <td>{{ product_type.id }}</td>
                <td>{{ product_type.type }}</td>
                <td>
                    <a href="{{ path('product_type_show', {'id': product_type.id}) }}">show</a>
                    <a href="{{ path('product_type_edit', {'id': product_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_type_new') }}">Create new</a>
{% endblock %}
